{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm",
            "script": "compile",
            "group": "build",
            "presentation": {
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            },
            "problemMatcher": "$tsc"
        },
        {
            "type": "npm",
            "script": "watch",
            "group": "build",
            "presentation": {
                "panel": "dedicated",
                "showReuseMessage": false
            },
            "isBackground": true,
            "problemMatcher": "$tsc-watch"
        },
        {
            "type": "npm",
            "script": "lint",
            "group": "test",
            "presentation": {
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            }
        },
        {
            "label": "Start Test Server",
            "type": "shell",
            "command": "node",
            "args": ["./out/utils/TestServer.js"],
            "group": "test",
            "presentation": {
                "panel": "dedicated",
                "showReuseMessage": false
            },
            "isBackground": true,
            "dependsOn": "npm: compile"
        }
    ]
}

{
  "name": "drsplitz",
  "displayName": "DrSplitz - Professional Music Production Control Panel",
  "description": "Comprehensive music production tool with Ableton Live integration and professional control panel",
  "version": "1.0.0",
  "publisher": "sergikdropz",
  "repository": {
    "type": "git",
    "url": "https://github.com/sergikdropz/DrSplitz.git"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "Visualization",
    "Machine Learning"
  ],
  "keywords": [
    "music",
    "audio",
    "production",
    "ableton",
    "midi",
    "daw",
    "control",
    "mixing",
    "mastering"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "drsplitz.openControlPanel",
        "title": "Open Control Panel",
        "category": "DrSplitz"
      },
      {
        "command": "drsplitz.connectAbleton",
        "title": "Connect to Ableton Live",
        "category": "DrSplitz"
      },
      {
        "command": "drsplitz.openMixerPanel",
        "title": "Open Mixer Panel",
        "category": "DrSplitz"
      },
      {
        "command": "drsplitz.openSequencer",
        "title": "Open Step Sequencer",
        "category": "DrSplitz"
      },
      {
        "command": "drsplitz.openEffectsRack",
        "title": "Open Effects Rack",
        "category": "DrSplitz"
      },
      {
        "command": "drsplitz.openSynthPanel",
        "title": "Open Synthesizer Panel",
        "category": "DrSplitz"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "drsplitzExplorer",
          "name": "DrSplitz Control",
          "when": "true"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "drsplitz",
          "title": "DrSplitz",
          "icon": "$(music)"
        }
      ]
    },
    "views": {
      "drsplitz": [
        {
          "id": "drsplitzControlPanel",
          "name": "Control Panel",
          "type": "webview"
        },
        {
          "id": "drsplitzMixer",
          "name": "Mixer",
          "type": "webview"
        },
        {
          "id": "drsplitzTransport",
          "name": "Transport",
          "type": "webview"
        },
        {
          "id": "drsplitzDevices",
          "name": "Connected Devices",
          "type": "tree"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "DrSplitz Configuration",
      "properties": {
        "drsplitz.abletonPort": {
          "type": "number",
          "default": 9001,
          "description": "Port for Ableton Live connection"
        },
        "drsplitz.midiDevice": {
          "type": "string",
          "default": "",
          "description": "Default MIDI device"
        },
        "drsplitz.audioSampleRate": {
          "type": "number",
          "default": 44100,
          "description": "Audio sample rate"
        },
        "drsplitz.bufferSize": {
          "type": "number",
          "default": 512,
          "description": "Audio buffer size"
        },
        "drsplitz.enableLowLatency": {
          "type": "boolean",
          "default": true,
          "description": "Enable low latency mode"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package",
    "deploy": "vsce publish"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.4",
    "@vscode/test-electron": "^2.2.0",
    "@vscode/vsce": "^2.15.0"
  },
  "dependencies": {
    "ws": "^8.16.0"
  }
}
